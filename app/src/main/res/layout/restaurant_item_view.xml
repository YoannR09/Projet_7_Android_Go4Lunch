<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="2dp">
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight=".65"
        android:orientation="vertical">
    <TextView
        android:id="@+id/restaurant_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Title of the Restaurant"
        android:textStyle="bold"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="Title"
        android:textSize="16sp"
        android:layout_margin="2dp"/>
    <TextView
        android:id="@+id/restaurant_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        tools:text="Description from the restaurant"
        android:layout_margin="2dp"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="12dp"/>
        <TextView
            android:id="@+id/restaurant_opening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="Opening"
            tools:text="Opening"
            android:textStyle="italic"
            android:textSize="12dp"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/plus_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15" >
        <TextView
            android:id="@+id/restaurant_range"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:layout_marginEnd="8dp"
            android:textSize="12sp"
            tools:text="128m"/>
        <TextView
            android:id="@+id/restaurant_opinion"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            tools:text="/5"/>
        <TextView
            android:id="@+id/restaurant_workmates_diner"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_gravity="end"
            android:layout_height="wrap_content"
            android:text="@string/undefined"
            android:layout_marginEnd="8dp"
            android:textSize="10sp"
            tools:text="(0)"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/picture_linear"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.20" >
        <ImageView
            android:id="@+id/restaurant_picture"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>
</LinearLayout>