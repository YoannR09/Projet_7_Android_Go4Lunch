<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="@android:color/white"
        android:background="?attr/colorPrimary"
        android:fitsSystemWindows="true">
        <ImageView
            android:id="@+id/picture"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:adjustViewBounds="true"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:visibility="gone"/>
        <LinearLayout
            android:id="@+id/picture_progress"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:fitsSystemWindows="true"
            android:layout_gravity="center">
            <com.google.android.material.progressindicator.CircularProgressIndicator
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:indicatorSize="100dp"
                app:indicatorColor="@android:color/white"
                android:layout_gravity="center"
                android:indeterminate="true"/>
        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#e0e0e0"
        android:clipToPadding="false"
        android:backgroundTint="@android:color/white"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:padding="12dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="20dp"
                    android:text="Title" />
                <TextView
                    android:id="@+id/descritption"
                    android:textColor="@android:color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginBottom="12dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:orientation="horizontal"
                android:layout_weight="1"
                android:gravity="center">
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/colorPrimary"
                    android:drawableTop="@drawable/ic_baseline_local_phone_24"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorPrimary"
                    android:text="@string/phone_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/colorPrimary"
                    android:drawableTop="@drawable/ic_baseline_star_24"
                    android:textAlignment="center"
                    android:drawableTint="@color/colorPrimary"
                    android:text="@string/like_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
                <Button
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:textColor="@color/colorPrimary"
                    android:drawableTop="@drawable/ic_baseline_language_24"
                    android:drawableTint="@color/colorPrimary"
                    android:textAlignment="center"
                    android:text="@string/website_button"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floating_action_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_anchor="@id/scroll"
        app:layout_anchorGravity="top|right|end"
        android:backgroundTint="@android:color/white"
        app:srcCompat="@drawable/ic_baseline_check_circle_24" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>